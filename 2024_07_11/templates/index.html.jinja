{% extends "base.html.jinja" %}

{% block title%}
{{ super() }} - 首頁
{% endblock %}

{% block head%}
{{ super() }}
<style type="text/css">
    body {
        background-color: lightblue;
    }
</style>
{% endblock%}

{% block main%}
<div class="container text-center">

    <div class="row">
        <div class="col-2" style="background-color: rgb(89, 147, 149);">
           <form action="{{url_for('index')}}" method="get">
               <select class="form-select" aria-label="Default select example" name="area">
                    <option selected>{{show_area}}</option>
                    {% for area in areas %}
                        {% if area !=show_area %}                
                            <option value="{{area}}">{{area}}</option> 
                        {% endif%}               
                    {% endfor %}
                </select>
                <button type="submit" class="btn btn-primary">送出</button>
           </form>
        </div>

        <div class="col-10" style="background-color: rgb(120, 200, 203);">
            <h3 style="text-align:left ;margin-top:0.5em">{{show_area}}</h3>
            <thead>
                <tr>

                <th scope="col">站點</th>
                <th scope="col">總車輛數</th>
                <th scope="col">可借</th>
                <th scope="col">可還</th>
                <th scope="col">時間</th>
                <th scope="col">狀態</th>
                
                </tr>
            </thead>
            <tbody>
                {% for sna in detail_snaes%}
                    <tr>
                        <th scope="row">{{sna[0]}}</th>
                        <td>{{sna[1]}}</td>
                        <td>{{sna[2]}}</td>
                        <td>{{sna[3]}}</td>
                        <td>{{sna[4]}}</td>
                        {% if sna[5]%}
                        <td>營業中</td>
                        {% else%}
                        {% endif%}
                        <td>{{sna[6]}}</td>
                    </tr>
                {{sna | pprint}}
                {% endfor %}
            </tbody>
        </div>
    </div>

</div>
{% endblock%}